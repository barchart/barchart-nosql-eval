[agents] 

# The Secure Shell (SSH) port that listens for agent-OpsCenter communications. 
#ssh_port=2222

# http://www.datastax.com/support-forums/topic/trouble-connecting-to-agent
# incoming_interface = <%= @ipaddress %>

#
# NOTE: uses hard-coded paths to 3 ssl kyes for stomp
# http://www.datastax.com/support-forums/topic/trouble-connecting-to-agent
#
use_ssl = true

# hidden stomp props
jks_keyfile = <%= @jks_keyfile %> 
p12_keyfile = <%= @p12_keyfile %>
pem_keyfile = <%= @pem_keyfile %>

# http://www.datastax.com/support-forums/topic/are-6162061621-ports-configurable-in-community-version-of-opscenter
#https_port = 61621
#incoming_port = 61620

#
#
#
[webserver] 

# The interface that the web server uses to listen for agent connections.
interface = <%= @ipaddress %>

# The HTTP port used for client connections to the OpsCenter web server
port = 8888

# 
use_ssl = true
ssl_port = 8443
ssl_keyfile  = <%= @ssl_keyfile %>
ssl_certfile = <%= @ssl_certfile %>


#
# By default, OpsCenter periodically sends usage metrics about the cluster to DataStax.
#
[stat_reporter]
interval = 0

[logging]
# level may be TRACE, DEBUG, INFO, WARN, or ERROR
level = DEBUG

